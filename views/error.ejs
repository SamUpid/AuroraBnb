<% layout("/layouts/boilerplate") %>

<div class="alert alert-danger mt-3 col-md-6 offset-md-3" role="alert">
  <h4 class="alert-heading">Error!</h4>
  <p><%= message %></p>
  
  <% if (typeof err !== 'undefined') { %>
    <hr>
    <p class="mb-0"><small>Error details: <%= err.message %></small></p>
  <% } %>
</div>
